{
  "enabled": true,
  "name": "タスク完了時にコミット",
  "description": "タスクが完了したときに自動的にgitコミットを実行します",
  "version": "1",
  "when": {
    "type": "agentStop"
  },
  "then": {
    "type": "askAgent",
    "prompt": "変更内容をコミットしてください。"
  },
  "workspaceFolderName": "my-website",
  "shortName": "commit-on-task-complete"
}